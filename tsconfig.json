{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "ES6"],
    "jsx": "react",
    "module": "ES6",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}